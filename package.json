{
  "name": "@spruce-hub/create-cli",
  "version": "0.0.0",
  "description": "Command line interface (CLI) for quick project creation",
  "type": "module",
  "main": "./dist/bin/cli.js",
  "files": [
    "/dist",
    "/template"
  ],
  "bin": {
    "yscli": "./dist/bin/cli.js"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rollup -c -w",
    "changelog": "conventional-changelog -n './changelog.config.cjs' -i CHANGELOG.md -s -r 0 && pnpm prettier",
    "prettier": "prettier --config .prettierrc --write ./**/*.md",
    "lint": "eslint --ext .ts . --fix",
    "vitest": "vitest",
    "vitest:c": "vitest run --coverage",
    "vitest:u": "vitest --coverage --ui",
    "prepare": "husky install"
  },
  "keywords": [
    "Spruce Hub",
    "CLI"
  ],
  "author": "Noah Yu",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spruce-hub/create-cli.git"
  },
  "homepage": "https://cli.sprucefe.com",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "boxen": "^7.1.0",
    "chalk": "^5.2.0",
    "commander": "^10.0.1",
    "ejs": "^3.1.9",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.1",
    "globby": "^13.1.4",
    "inquirer": "^9.2.6",
    "ora": "^6.3.1",
    "parse-json": "^7.0.0",
    "progress": "^2.0.3",
    "semver": "^7.5.1",
    "tslib": "^2.5.2",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/ejs": "^3.1.2",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.2.5",
    "@types/parse-json": "^4.0.0",
    "@types/progress": "^2.0.5",
    "@types/semver": "^7.5.0",
    "@types/validate-npm-package-name": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "commitizen": "^4.3.0",
    "compare-func": "^2.0.0",
    "conventional-changelog-angular": "^5.0.13",
    "conventional-changelog-cli": "^2.2.2",
    "cz-git": "^1.6.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "rollup": "^3.23.0",
    "rollup-plugin-copy": "^3.4.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
